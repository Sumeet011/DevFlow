# Auto detect text files and normalize to LF
* text=auto eol=lf

# Lockfiles should always use LF
pnpm-lock.yaml text eol=lf
package-lock.json text eol=lf
yarn.lock text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf

# Windows specific
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
